/* 
  Strict HTTPS
  Security headers
*/
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload

/* 
  Content Security Policy (CSP)
*/
  Content-Security-Policy: default-src 'self'; img-src 'self' data: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.tailwindcss.com; style-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com; font-src 'self' https: data:; connect-src 'self' https: wss:; frame-ancestors 'none';

/* 
  Prevent XSS
*/
  X-XSS-Protection: 1; mode=block

/* 
  Prevent MIME sniffing
*/
  X-Content-Type-Options: nosniff

/* 
  Prevent clickjacking
*/
  X-Frame-Options: DENY

/* 
  Referrer policy
*/
  Referrer-Policy: no-referrer-when-downgrade

/* 
  Permissions policy (limit features)
*/
  Permissions-Policy: geolocation=(), microphone=(), camera=()

/*
  Cache Control for static assets
*/
/assets/*
  Cache-Control: public, max-age=31536000, immutable

